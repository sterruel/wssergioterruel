package decisao;

import javax.swing.JOptionPane;

public class DesisaoSimplesDesafio {
	
	public static void main(String[] args) {
		
		String nome = JOptionPane.showInputDialog("Digite seu Nome: ").toUpperCase();
		float idade = Float.parseFloat(JOptionPane.showInputDialog("Digite sua idade: "));
		
		if (idade>=18) {
		System.out.println("Seu voto é obrigatorio: ");
			}
		
		if (idade<16) {
		System.out.println("Você não pode votar : ");
		}	
		
		// && = and
		// || = or
		if (idade<18 && idade>=16) {
			System.out.println("Seu voto é facultativo : ");
			}	
		
		System.out.println("Seu nome é: " + nome);
		System.out.println("Sua idade é: " + idade);
		
		
		
		
		
		
		
		
		
	}

}
